@using BlazorDeploy.Models
@using BlazorDeploy.Services
@inject ModalService ModalService

@if (isVisible && Project != null)
{
    <div class="modal fade show" tabindex="-1" style="display: block; background-color: rgba(0,0,0,0.7); position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 1050;">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content shadow-lg">
                <div class="modal-header bg-black text-white">
                    <h5 class="modal-title">@Project.Name</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="accordion" id="accordionGlobalModal">

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDesc" aria-expanded="true">
                                    📄 Descrição
                                </button>
                            </h2>
                            <div id="collapseDesc" class="accordion-collapse collapse show" data-bs-parent="#accordionGlobalModal">
                                <div class="accordion-body">
                                    <p>@((MarkupString)Project.Description)</p>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseImg" aria-expanded="false">
                                    📷 Imagens
                                </button>
                            </h2>
                            <div id="collapseImg" class="accordion-collapse collapse" data-bs-parent="#accordionGlobalModal">
                                <div class="accordion-body">
                                    <div id="carouselGlobal" class="carousel slide" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            @if (Project.ImagesUrl != null && Project.ImagesUrl.Any())
                                            {
                                                @foreach (var img in Project.ImagesUrl)
                                                {
                                                    <div class="carousel-item @(Project.ImagesUrl.IndexOf(img) == 0 ? "active" : "")">
                                                        <img src="@img" class="d-block w-100 rounded" alt="Project detail">
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-center text-muted p-3">Sem imagens.</p>
                                            }
                                        </div>
                                        @if (Project.ImagesUrl?.Count > 1)
                                        {
                                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselGlobal" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon bg-dark rounded" aria-hidden="true"></span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#carouselGlobal" data-bs-slide="next">
                                                <span class="carousel-control-next-icon bg-dark rounded" aria-hidden="true"></span>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Project.VideoUrl))
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseVid">
                                        🎥 Vídeo
                                    </button>
                                </h2>
                                <div id="collapseVid" class="accordion-collapse collapse" data-bs-parent="#accordionGlobalModal">
                                    <div class="accordion-body">
                                        <div class="ratio ratio-16x9">
                                            <iframe src="@Project.VideoUrl" allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isVisible = false;
    private PortfolioProjectModel? Project;

    protected override void OnInitialized()
    {
        // Se inscreve nos eventos do serviço
        ModalService.OnShow += ShowModal;
        ModalService.OnClose += CloseModal;
    }

    private void ShowModal(PortfolioProjectModel project)
    {
        Project = project;
        isVisible = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        isVisible = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        ModalService.OnShow -= ShowModal;
        ModalService.OnClose -= CloseModal;
    }
}